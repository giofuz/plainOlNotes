<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="4dp">

    <ImageView
        android:id="@+id/imageDocIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_document" />

    <TextView
        android:id="@+id/tvNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageDocIcon"
        android:singleLine="true"
        android:text="Dummy Text"
        android:textColor="@color/list_item_text"
        android:textSize="18sp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvNote2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Dummy Text"
        android:textColor="@color/list_item_text"
        android:textSize="12sp"
        android:layout_toEndOf="@+id/textView5"
        android:layout_below="@+id/imageDocIcon"
        android:layout_toRightOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvNote3"
        android:layout_alignBottom="@+id/tvNote2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantity"
        android:id="@+id/textView"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvNote"
        android:layout_above="@+id/tvNote2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expire"
        android:id="@+id/textView5"
        android:textSize="10sp"
        android:layout_alignBaseline="@+id/tvNote3"
        android:layout_alignBottom="@+id/tvNote3"
        android:layout_alignLeft="@+id/tvNote"
        android:layout_alignStart="@+id/tvNote" />


</RelativeLayout>